FROM golang:1.24-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -o mockserver ./test/e2e/cmd/mockserver

FROM alpine:3.19
RUN apk add --no-cache ca-certificates netcat-openbsd
WORKDIR /app
COPY --from=builder /app/mockserver .

EXPOSE 8080 2222 3306 3389 9000

ENTRYPOINT ["./mockserver"]
