FROM golang:1.24-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 go build -o mock ./cmd/mock

FROM alpine:3.19
RUN apk add --no-cache ca-certificates
WORKDIR /app
COPY --from=builder /app/mock .

# Protocol and port from environment
ENTRYPOINT ["sh", "-c", "./mock -port $PORT -protocol $PROTOCOL"]
